{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Ajouter une nouvelle réponse</h1>
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.description_reponse) }}
                        {{ form_widget(form.description_reponse, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.date_reponse) }}
                        {{ form_widget(form.date_reponse, {'attr': {'placeholder': 'Date...'}}) }}

                    </div>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                {{ form_end(form) }}
                                <a href="{{ path('app_list_reponse') }}">Retour à la liste des reponses</a>

            </div>
        </div>
    </div>
{% endblock %}
